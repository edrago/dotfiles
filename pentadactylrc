"1.1

loadplugins '\.(js|penta)$'
group user
map -count -modes=n '\' -builtin <count><Esc>:noh<Return>
map -count -modes=n -silent j -builtin <count>4j
map -count -modes=n -silent k -builtin <count>4k
map -count -modes=n -silent l -builtin <count>3l
map -count -modes=n -silent h -builtin <count>3h
set complete=location,suggestion
set defsearch=duckduckgo
set guioptions=bnCrs
set hlfind
set suggestengines=duckduckgo

" vim: set ft=pentadactyl:
